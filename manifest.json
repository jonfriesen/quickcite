{
  "manifest_version": 3,
  "name": "GitHub PR Button Injector",
  "version": "1.1",
  "description": "Injects a button on GitHub PR pages to copy a string to clipboard with format preference",
  "permissions": ["clipboardWrite", "webNavigation", "storage"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "dist/icon.png"
  },
  "icons": {
    "48": "dist/icon.png",
    "128": "dist/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["dist/styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/buttons.css", "dist/clipboard.svg"],
      "matches": ["https://github.com/*"]
    }
  ]
}
